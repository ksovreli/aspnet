@model IEnumerable<datasource_aspnet_efcore.Models.Entities.TodoListItem>
@{
	ViewData["Title"] = "To-do List Page";
}

<h1>To-do Lists.</h1>

<a class="btn btn-secondary" asp-action="Create">
    Add new list.
</a>

@if (!Model.Any())
{
    <p>There is no to-do list.</p>
}

@if (Model.Any())
{
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created date</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        @* <p>Edit</p> *@
                        <i title="Edit" class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <a asp-action="View" asp-route-id="@item.Id">
                        @* <p>View</p> *@
                        <i title="View" class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Delete"  asp-route-id="@item.Id">
                        @* <p>Delete</p> *@
                        <i title="Delete" class="fa fa-recycle" aria-hidden="true"></i>
                    </a>
                </td>   
            </tr>
        }
    </table>
}
